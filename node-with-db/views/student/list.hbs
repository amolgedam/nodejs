<h3>
    <a href="/student" class="btn btn-primary">Create Student</a>
</h3>

<div class="table table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Fll Name</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            {{ #each list }}
            <tr>
                <td>{{ this.fullname }}</td>
                <td>{{ this.mobile }}</td>
                <td>{{ this.email }}</td>
                <td>{{ this.city }}</td>
                <td>
                    <a class="btn btn-primary" href="student/{{ this._id }}">Edit</a>
                    <a class="btn btn-danger" href="student/delete/{{ this._id }}" onclick="return confirm('Are you want to delete this records?')">Delete</a>
                </td>
            </tr>
            {{ /each }}
        </tbody>
    </table>
</div>
